<!-- ReSharper disable once ObsoleteElementError -->
<Window x:Class="WPFbooks.EditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WPFbooks"
        mc:Ignorable="d"
        Title="EditWindow" Height="450" MinWidth="700" MinHeight="400"  Width="800" FontSize="14"
        ThemeMode="Dark">
    <Grid Margin="10" Width="650" MaxHeight="450">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        

        <Label Grid.Row="0" Content="Könyv adatok" FontWeight="Bold" FontSize="16" VerticalAlignment="Center" Grid.ColumnSpan="2" Margin="20, 0, 0, 0"/>
        
        <Label Grid.Row="1" Grid.Column="0" Content="Cím:" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <Label Grid.Row="2" Grid.Column="0" Content="Szerző:" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <Label Grid.Row="3" Grid.Column="0" Content="Kiadási év:" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <Label Grid.Row="4" Grid.Column="0" Content="Műfaj:" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <Label Grid.Row="5" Grid.Column="0" Content="Státusz:" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <Label Grid.Row="6" Grid.Column="0" Content="Jelenlegi oldal:" HorizontalAlignment="Right" VerticalContentAlignment="Center"/>


        <TextBox Name="txtTitle" Tag="lblErrorTitle" Grid.Row="1" Grid.Column="1" Text="" HorizontalAlignment="Left" VerticalAlignment="Center" Width="300" MinWidth="200" Margin="20, 0, 0, 0" TextChanged="txt_TextChanged"/>
        <Label Name="lblErrorTitle" Grid.Row="1" Grid.Column="1" Content="Adjon meg könyvcímet!" HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="Red" Visibility="Hidden"/>

        <TextBox Name="txtAuthor" Tag="lblErrorAuthor" Grid.Row="2" Grid.Column="1" Text="" HorizontalAlignment="Left" VerticalAlignment="Center" Width="300" MinWidth="200" Margin="20, 0, 0, 0" TextChanged="txt_TextChanged"/>
        <Label Name="lblErrorAuthor" Grid.Row="2" Grid.Column="1" Content="Adjon meg írót!" HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="Red" Visibility="Hidden"/>

        <TextBox Name="txtPublishYear" Tag="lblErrorYear" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Width="100" Margin="20, 0, 0, 0" TextChanged="txt_TextChanged"/>
        <Label Name="lblErrorYear" Grid.Row="3" Grid.Column="1" Content="Adjon meg valós kiadási évet!" HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="Red" Visibility="Hidden"/>


        <Grid Grid.Row="4" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <ComboBox Name="cbGenre" Tag="lblErrorGenre" Grid.Row="4" Grid.Column="0" Height="35" MinWidth="200" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0" IsEditable="True" TextBoxBase.TextChanged="txt_TextChanged">
                
            </ComboBox>
            <Button Name="btnNewGenre" Grid.Row="4" Grid.Column="1" Content="Új műfaj" Width="100" HorizontalAlignment="Left" Margin="0,0,0,0" Click="btnNewGenre_Click"/>
            <Label Name="lblErrorGenre" Grid.Row="4" Grid.Column="1" Content="Válasszon vagy hozzon&#10;létre új műfajt!" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="Red" Visibility="Hidden"/>

        </Grid>
        <WrapPanel Grid.Row="5" Grid.Column="1" VerticalAlignment="Center">
            <RadioButton GroupName="rbReadingStatus" Name="rbNotStarted" Content="Nem elkezdett" VerticalContentAlignment="Top" Margin="20,0,0,0"/>
            <RadioButton GroupName="rbReadingStatus" Name="rbStarted" Content="Elkezdett" VerticalContentAlignment="Top" Margin="10,0,0,0"/>
            <RadioButton GroupName="rbReadingStatus" Name="rbFinished" Content="Befejezett" VerticalContentAlignment="Top" Margin="0,0,0,0"/>
        </WrapPanel>

        <Grid Grid.Row="6" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*"/>
                <!--<ColumnDefinition/>-->
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <TextBox Name="txtCurrentPage" Tag="lblErrorCurrent"  Grid.Row="6" Grid.Column="0" Text="" HorizontalAlignment="Left" VerticalAlignment="Center" MinWidth="75" Width="85" Margin="10,0,0,0" TextChanged="txt_TextChanged"/>
            <Label Grid.Row="6" Grid.Column="1" Content="Összes oldal:" HorizontalAlignment="Right" VerticalAlignment="Center"/>
            <TextBox Name="txtTotalPages" Tag="lblErrorTotal"  Grid.Row="6" Grid.Column="2" Text="" HorizontalAlignment="Left" VerticalAlignment="Center" MinWidth="75" Width="85" Margin="10,0,0,0" TextChanged="txt_TextChanged"/>
        </Grid>

        <Grid Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0" Name="lblErrorCurrent" Content="Valós jelenlegi oldalt adjon meg!" HorizontalAlignment="Center" Foreground="Red" Visibility="Hidden"/>
            <Label Grid.Column="1" Name="lblErrorTotal" Content="Valós összes oldalt adjon meg!" HorizontalAlignment="Left" Foreground="Red" Visibility="Hidden"/>
        </Grid>

        <Grid Grid.Row="8" Grid.Column="1">
            <Grid.ColumnDefinitions >
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button Name="btnCancel" Grid.Row="7" Grid.Column="1" Content="Elvetés" HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="100" Click="btnCancel_Click"/>
            <Button Name="btnSave" Grid.Row="7" Grid.Column="2" Content="Mentés" HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="100" Click="btnSave_Click"/>
        </Grid>


    </Grid>
</Window>
