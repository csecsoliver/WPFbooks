<!-- ReSharper disable once ObsoleteElementError -->
<Window x:Class="WPFbooks.EditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WPFbooks"
        mc:Ignorable="d"
        Title="Book Data" Height="450" MinWidth="700" MinHeight="400"  Width="800" FontSize="14"
        ThemeMode="Dark" >
    <!--Background="Black">  --><!-- TAKE OUT AFTER TESTING!!!-->
    <Window.Resources>
        <Style BasedOn="{StaticResource {x:Type Label}}" TargetType="Label" x:Key="Label">
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style BasedOn="{StaticResource Label}" TargetType="Label" x:Key="ErrorLabel">
            <Setter Property="Foreground" Value="Red"/>
            <Setter Property="Visibility" Value="Hidden"/>
        </Style>

        <Style BasedOn="{StaticResource {x:Type TextBox}}" TargetType="TextBox" x:Key="TextBox">
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="20, 0, 0, 0"/>
            <Setter Property="Width" Value="300"/>
            <Setter Property="MinWidth" Value="200"/>
            <EventSetter Event="TextChanged" Handler="txt_TextChanged"/>
        </Style>
        <Style BasedOn="{StaticResource TextBox}" TargetType="TextBox" x:Key="PageInputTextBox">
            <Setter Property="Margin" Value="10, 0, 0, 0"/>
            <Setter Property="Width" Value="85"/>
            <Setter Property="MinWidth" Value="75"/>
        </Style>

        <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="Button" x:Key="Button">
            <Setter Property="Width" Value="100"/>
        </Style>
        <Style BasedOn="{StaticResource Button}" TargetType="Button" x:Key="CommandButton">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style BasedOn="{StaticResource {x:Type RadioButton}}" TargetType="RadioButton" x:Key="RadioButton">
            <Setter Property="VerticalContentAlignment" Value="Top"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="10" Width="650" MaxHeight="450">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>


        <Label Grid.Row="0" Grid.ColumnSpan="2" Content="Könyv adatok" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" Style="{StaticResource Label}"/>

        <Label Grid.Row="1" Grid.Column="0" Content="Cím:"  Style="{StaticResource Label}"/>
        <Label Grid.Row="2" Grid.Column="0" Content="Szerző:"  Style="{StaticResource Label}"/>
        <Label Grid.Row="3" Grid.Column="0" Content="Kiadási év:"  Style="{StaticResource Label}"/>
        <Label Grid.Row="4" Grid.Column="0" Content="Műfaj:"  Style="{StaticResource Label}"/>
        <Label Grid.Row="5" Grid.Column="0" Content="Státusz:"  Style="{StaticResource Label}"/>
        <Label Grid.Row="6" Grid.Column="0" Content="Jelenlegi oldal:"  Style="{StaticResource Label}"/>


        <TextBox Name="txtTitle" Tag="lblErrorTitle" Grid.Row="1" Grid.Column="1" Style="{StaticResource TextBox}"/>
        <Label Name="lblErrorTitle" Grid.Row="1" Grid.Column="1" Content="Adjon meg könyvcímet!" Style="{StaticResource ErrorLabel}"/>

        <TextBox Name="txtAuthor" Tag="lblErrorAuthor" Grid.Row="2" Grid.Column="1" Style="{StaticResource TextBox}"/>
        <Label Name="lblErrorAuthor" Grid.Row="2" Grid.Column="1" Content="Adjon meg írót!" Style="{StaticResource ErrorLabel}"/>

        <TextBox Name="txtPublishYear" Tag="lblErrorYear" Grid.Row="3" Grid.Column="1" MinWidth="100" Width="100"  Style="{StaticResource TextBox}"/>
        <Label Name="lblErrorYear" Grid.Row="3" Grid.Column="1" Content="Adjon meg valós kiadási évet!" Style="{StaticResource ErrorLabel}"/>


        <Grid Grid.Row="4" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <ComboBox Name="cbGenre" Tag="lblErrorGenre" Grid.Row="4" Grid.Column="0"
                      Height="35" MinWidth="200" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0" IsEditable="True" TextBoxBase.TextChanged="txt_TextChanged"/>
            <Button Name="btnNewGenre" Grid.Row="4" Grid.Column="1" Content="Új műfaj" HorizontalAlignment="Left" Style="{StaticResource Button}"  Click="btnNewGenre_Click"/>
            <Label Name="lblErrorGenre" Grid.Row="4" Grid.Column="1" Content="Válasszon vagy hozzon&#10;létre új műfajt!" Margin="10,0,0,0"  Style="{StaticResource ErrorLabel}"/>

        </Grid>
        <WrapPanel Grid.Row="5" Grid.Column="1" VerticalAlignment="Center">
            <RadioButton GroupName="rbReadingStatus" Name="rbNotStarted" Content="Nem elkezdett" Style="{StaticResource RadioButton}" Margin="20,0,0,0"/>
            <RadioButton GroupName="rbReadingStatus" Name="rbStarted" Content="Elkezdett" Style="{StaticResource RadioButton}" Margin="10,0,0,0"/>
            <RadioButton GroupName="rbReadingStatus" Name="rbFinished" Content="Befejezett" Style="{StaticResource RadioButton}"/>
        </WrapPanel>

        <Grid Grid.Row="6" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*"/>
                <!--<ColumnDefinition/>-->
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <TextBox Name="txtCurrentPage" Tag="lblErrorCurrent"  Grid.Row="6" Grid.Column="0" Style="{StaticResource PageInputTextBox}"/>
            <Label Grid.Row="6" Grid.Column="1" Content="Összes oldal:" Style="{StaticResource Label}"/>
            <TextBox Name="txtTotalPages" Tag="lblErrorTotal"  Grid.Row="6" Grid.Column="2" Style="{StaticResource PageInputTextBox}"/>
        </Grid>

        <Grid Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0" Name="lblErrorCurrent" Content="Valós jelenlegi oldalt adjon meg!" HorizontalAlignment="Center" Style="{StaticResource ErrorLabel}"/>
            <Label Grid.Column="1" Name="lblErrorTotal" Content="Valós összes oldalt adjon meg!" HorizontalAlignment="Left" Style="{StaticResource ErrorLabel}"/>
        </Grid>

        <Grid Grid.Row="8" Grid.Column="1">
            <Grid.ColumnDefinitions >
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button Name="btnCancel" Grid.Row="7" Grid.Column="1" Content="Elvetés" Style="{StaticResource CommandButton}" Click="btnCancel_Click"/>
            <Button Name="btnSave" Grid.Row="7" Grid.Column="2" Content="Mentés" Style="{StaticResource CommandButton}" Click="btnSave_Click"/>
        </Grid>


    </Grid>
</Window>
