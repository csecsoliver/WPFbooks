<!-- ReSharper disable once ObsoleteElementError -->
<Window
    x:Class="WPFbooks.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:WPFbooks"
    mc:Ignorable="d"
    Title="MainWindow"
    Height="480"
    Width="800"
    MinHeight="480"
    MinWidth="800"
    ThemeMode="Dark"
    FontSize="14"
    Loaded="MainWindow_OnLoaded"
>
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <Grid Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>
            <Label
                Grid.Column="0"
                Grid.Row="0"
                Grid.ColumnSpan="2"
                Content="Keresés"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Margin="5, 0"
                FontSize="16"
                FontWeight="Bold"
            />
            <Label
                Grid.Column="0"
                Grid.Row="1"
                Content="Cím: "
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Margin="5, 0"
            />
            <TextBox
                Grid.Column="1"
                Grid.Row="1"
                Name="TitleInput"
                VerticalAlignment="Center"
            />

            <Label
                Grid.Column="0"
                Grid.Row="2"
                Content="Szerző: "
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Margin="5, 0"
            />
            <TextBox
                Grid.Column="1"
                Grid.Row="2"
                Name="AuthorInput"
                VerticalAlignment="Center"
            />

            <Label
                Grid.Column="0"
                Grid.Row="3"
                Content="Műfaj: "
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Margin="5, 0"
            />
            <ComboBox
                Grid.Column="1"
                Grid.Row="3"
                Name="GenreComboBox"
                VerticalAlignment="Center"
            >
                <ComboBoxItem IsSelected="True">Any</ComboBoxItem>

            </ComboBox>

            <Label
                Grid.Column="0"
                Grid.Row="4"
                Content="Státusz: "
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Margin="5, 0"
            />
            <RadioButton
                Content="Nem elkezdett"
                GroupName="StatusRadio"
                Name="ToReadRadioButton"
                Grid.Column="1"
                Grid.Row="4"
                VerticalContentAlignment="Top"
                Margin="0,0,5,0"
            />
            <RadioButton
                Content="Elkezdett"
                GroupName="StatusRadio"
                Name="ReadingRadioButton"
                Grid.Column="1"
                Grid.Row="5"
                VerticalContentAlignment="Top"
                Margin="0,0,5,0"
            />
            <RadioButton
                Content="Befejezett"
                GroupName="StatusRadio"
                Name="CompletedRadioButton"
                Grid.Column="1"
                Grid.Row="6"
                VerticalContentAlignment="Top"
                Margin="0,0,5,0"
            />
            <RadioButton
                Content="Mindegy"
                GroupName="StatusRadio"
                Name="AnyRadioButton"
                Grid.Column="1"
                Grid.Row="7"
                VerticalContentAlignment="Top"
                Margin="0,0,5,0"
            />

            <Button
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Grid.Row="8"
                HorizontalAlignment="Stretch"
                Click="SearchButton_Click"
            >Keresés</Button>
            <Button
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Grid.Row="9"
                HorizontalAlignment="Stretch"
            >Reset</Button>
        </Grid>
        <Grid Grid.Column="1" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="1.3*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <ListBox
                Grid.Row="0"
                Grid.ColumnSpan="2"
                Name="BooksListBox"
                Margin="5"
            />
            <Button
                Grid.Row="1"
                Grid.Column="0"
                HorizontalAlignment="Stretch"
                Margin="5,0"
            >Új könyv</Button>
            <Button
                Grid.Row="1"
                Grid.Column="1"
                HorizontalAlignment="Stretch"
                Margin="5,0"
            >Könyv törlése</Button>
        </Grid>
        <Grid Grid.Column="2" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
            </Grid.RowDefinitions>
            <Label
                Grid.ColumnSpan="2"
                Content="Könyv részletei"
                FontSize="16"
                FontWeight="Bold"
                Margin="5"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
            />
            <Label
                Grid.Column="0"
                Grid.Row="1"
                Content="Cím: "
                Margin="5"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
            />
            <Label
                Grid.Column="1"
                Grid.Row="1"
                Name="TitleLabel"
                Margin="5"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
            />
            <Label
                Grid.Column="0"
                Grid.Row="2"
                Content="Szerző: "
                Margin="5"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
            />
            <Label
                Grid.Column="1"
                Grid.Row="2"
                Name="AuthorLabel"
                Margin="5"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
            />
            <Label
                Grid.Column="0"
                Grid.Row="3"
                Content="Műfaj: "
                Margin="5"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
            />
            <Label
                Grid.Column="1"
                Grid.Row="3"
                Name="GenreLabel"
                Margin="5"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
            />
            <Label
                Grid.Column="0"
                Grid.Row="4"
                Content="Státusz: "
                Margin="5"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
            />
            <Label
                Grid.Column="1"
                Grid.Row="4"
                Name="StatusLabel"
                Margin="5"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
            />
            <Label
                Grid.Column="0"
                Grid.Row="5"
                Content="Oldalszám: "
                Margin="5"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
            />
            <Label
                Grid.Column="1"
                Grid.Row="5"
                Name="TotalPagesLabel"
                Margin="5"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
            />
            <Label
                Grid.Column="0"
                Grid.Row="6"
                Content="Jelenlegi Oldal: "
                Margin="5"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
            />
            <Label
                Grid.Column="1"
                Grid.Row="6"
                Name="CurrentPageLabel"
                Margin="5"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
            />
        </Grid>
    </Grid>
</Window>
