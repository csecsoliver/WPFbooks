<!-- ReSharper disable once ObsoleteElementError -->
<Window
    x:Class="WPFbooks.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:WPFbooks"
    mc:Ignorable="d"
    Title="MainWindow"
    Height="480"
    Width="800"
    MinHeight="480"
    MinWidth="800"
    ThemeMode="Dark"
    FontSize="14"
    Loaded="MainWindow_OnLoaded">

    <Window.Resources>
        <Style BasedOn="{StaticResource {x:Type Label}}" TargetType="Label" x:Key="BaseLabel">
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <Style BasedOn="{StaticResource BaseLabel}" TargetType="Label" x:Key="HeaderLabel">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="5,0"/>
        </Style>

        <Style BasedOn="{StaticResource BaseLabel}" TargetType="Label" x:Key="DetailLabel">
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <Style BasedOn="{StaticResource {x:Type TextBox}}" TargetType="TextBox" x:Key="BaseTextBox">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinHeight" Value="22"/>
        </Style>

        <Style BasedOn="{StaticResource {x:Type ComboBox}}" TargetType="ComboBox" x:Key="BaseComboBox">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinHeight" Value="22"/>
        </Style>

        <Style BasedOn="{StaticResource {x:Type RadioButton}}" TargetType="RadioButton" x:Key="BaseRadioButton">
            <Setter Property="VerticalContentAlignment" Value="Top"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="Button" x:Key="BaseButton">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinHeight" Value="25"/>
        </Style>

        <Style BasedOn="{StaticResource BaseButton}" TargetType="Button" x:Key="StretchButton">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>

        <Style BasedOn="{StaticResource {x:Type ListBox}}" TargetType="ListBox" x:Key="BaseListBox">
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <Grid Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>
            <Label
                Grid.Column="0"
                Grid.Row="0"
                Grid.ColumnSpan="2"
                Content="Keresés"
                Style="{StaticResource HeaderLabel}" />
            <Label
                Grid.Column="0"
                Grid.Row="1"
                Content="Cím: "
                Style="{StaticResource BaseLabel}" />
            <TextBox
                Grid.Column="1"
                Grid.Row="1"
                Name="TitleInput"
                Style="{StaticResource BaseTextBox}" />

            <Label
                Grid.Column="0"
                Grid.Row="2"
                Content="Szerző: "
                Style="{StaticResource BaseLabel}" />
            <TextBox
                Grid.Column="1"
                Grid.Row="2"
                Name="AuthorInput"
                Style="{StaticResource BaseTextBox}" />

            <Label
                Grid.Column="0"
                Grid.Row="3"
                Content="Műfaj: "
                Style="{StaticResource BaseLabel}" />
            <ComboBox
                Grid.Column="1"
                Grid.Row="3"
                Name="GenreComboBox"
                Style="{StaticResource BaseComboBox}" />

            <Label
                Grid.Column="0"
                Grid.Row="4"
                Content="Státusz: "
                Style="{StaticResource BaseLabel}" />
            <RadioButton
                Content="Mindegy"
                GroupName="StatusRadio"
                Name="AnyRadioButton"
                IsChecked="True"
                Grid.Column="1"
                Grid.Row="4"
                Style="{StaticResource BaseRadioButton}" />
            <RadioButton
                Content="Nem elkezdett"
                GroupName="StatusRadio"
                Name="ToReadRadioButton"
                Grid.Column="1"
                Grid.Row="5"
                Style="{StaticResource BaseRadioButton}" />
            <RadioButton
                Content="Elkezdett"
                GroupName="StatusRadio"
                Name="ReadingRadioButton"
                Grid.Column="1"
                Grid.Row="6"
                Style="{StaticResource BaseRadioButton}" />
            <RadioButton
                Content="Befejezett"
                GroupName="StatusRadio"
                Name="CompletedRadioButton"
                Grid.Column="1"
                Grid.Row="7"
                Style="{StaticResource BaseRadioButton}" />

            <Button
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Grid.Row="8"
                Click="SearchButton_Click"
                Style="{StaticResource StretchButton}">
                Keresés
            </Button>
            <Button
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Grid.Row="9"
                Click="ResetButton_OnClick"
                Style="{StaticResource StretchButton}">
                Visszaállítás
            </Button>
        </Grid>
        <Grid Grid.Column="1" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <ListBox
                Grid.Row="0"
                Grid.ColumnSpan="2"
                Name="BooksListBox"
                Style="{StaticResource BaseListBox}" />
            <Button
                Grid.Row="1"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Click="NewBook_OnClick"
                Style="{StaticResource StretchButton}">
                Új könyv létrehozása
            </Button>
            <Button
                Grid.Row="2"
                Grid.Column="0"
                Click="EditBook_OnClick"
                Style="{StaticResource StretchButton}">
                Szerkesztés
            </Button>
            <Button
                Grid.Row="2"
                Grid.Column="1"
                Click="DeleteBook_OnClick"
                Style="{StaticResource StretchButton}">
                Törlés
            </Button>

        </Grid>
        <Grid Grid.Column="2" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
            </Grid.RowDefinitions>
            <Label
                Grid.ColumnSpan="2"
                Content="Könyv részletei"
                Style="{StaticResource HeaderLabel}" />
            <Label
                Grid.Column="0"
                Grid.Row="1"
                Content="Cím: "
                Style="{StaticResource BaseLabel}" />
            <Label
                Grid.Column="1"
                Grid.Row="1"
                Name="TitleLabel"
                Style="{StaticResource DetailLabel}" />
            <Label
                Grid.Column="0"
                Grid.Row="2"
                Content="Szerző: "
                Style="{StaticResource BaseLabel}" />
            <Label
                Grid.Column="1"
                Grid.Row="2"
                Name="AuthorLabel"
                Style="{StaticResource DetailLabel}" />
            <Label
                Grid.Column="0"
                Grid.Row="3"
                Content="Műfaj: "
                Style="{StaticResource BaseLabel}" />
            <Label
                Grid.Column="1"
                Grid.Row="3"
                Name="GenreLabel"
                Style="{StaticResource DetailLabel}" />
            <Label
                Grid.Column="0"
                Grid.Row="4"
                Content="Státusz: "
                Style="{StaticResource BaseLabel}" />
            <Label
                Grid.Column="1"
                Grid.Row="4"
                Name="StatusLabel"
                Style="{StaticResource DetailLabel}" />
            <Label
                Grid.Column="0"
                Grid.Row="5"
                Content="Oldalszám: "
                Style="{StaticResource BaseLabel}" />
            <Label
                Grid.Column="1"
                Grid.Row="5"
                Name="TotalPagesLabel"
                Style="{StaticResource DetailLabel}" />
            <Label
                Grid.Column="0"
                Grid.Row="6"
                Content="Jelenlegi Oldal: "
                Style="{StaticResource BaseLabel}" />
            <Label
                Grid.Column="1"
                Grid.Row="6"
                Name="CurrentPageLabel"
                Style="{StaticResource DetailLabel}" />

        </Grid>
    </Grid>
</Window>