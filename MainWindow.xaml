<!-- ReSharper disable once ObsoleteElementError -->
<Window x:Class="WPFbooks.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFbooks"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="800"
        MinHeight="400"
        MinWidth="800"
        ThemeMode="Dark">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Label Grid.Column="0" Grid.Row="0" Content="Cím: " HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5, 0" FontSize="14"/>
            <TextBox Grid.Column="1" Grid.Row="0" Name="TitleInput" VerticalAlignment="Center"></TextBox>
            
            <Label Grid.Column="0" Grid.Row="1" Content="Szerző: " HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5, 0" FontSize="14"/>
            <TextBox Grid.Column="1" Grid.Row="1" Name="AuthorInput" VerticalAlignment="Center"></TextBox>
            
            <Label Grid.Column="0" Grid.Row="2" Content="Műfaj: " HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5, 0" FontSize="14"/>
            <ComboBox Grid.Column="1" Grid.Row="2" Name="GenreComboBox" VerticalAlignment="Center">
                <ComboBoxItem>asd</ComboBoxItem>
            </ComboBox>
            
            <Label Grid.Column="0" Grid.Row="3" Content="Státusz: " HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5, 0" FontSize="14"/>
            <RadioButton Content="Nem elkezdett" Grid.Column="1" Grid.Row="3" VerticalContentAlignment="Top" Margin="0,0,5,0"/>
            <RadioButton Content="Elkezdett" Grid.Column="1" Grid.Row="4" VerticalContentAlignment="Top" Margin="0,0,5,0"/>
            <RadioButton Content="Befejezett" Grid.Column="1" Grid.Row="5" VerticalContentAlignment="Top" Margin="0,0,5,0"/>
            
            <Button Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="6" HorizontalAlignment="Stretch">Keresés</Button>
            <Button Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="7" HorizontalAlignment="Stretch">Reset</Button>
        </Grid>
        <Grid Grid.Column="1" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="1.3*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <ListBox Grid.Row="0" Grid.ColumnSpan="2" Name="BooksListBox" Margin="5"/>
            <Button Grid.Row="1" Grid.Column="0" HorizontalAlignment="Stretch" Margin="5">Új könyv</Button>
            <Button Grid.Row="1" Grid.Column="1" HorizontalAlignment="Stretch" Margin="5">Könyv törlése</Button>
        </Grid>
        <Grid Grid.Column="2" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="40"></RowDefinition>
            </Grid.RowDefinitions>
            <Label Grid.ColumnSpan="2" Content="Könyv részletei" FontSize="16" FontWeight="Bold" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Label Grid.Column="0" Grid.Row="1" Content="Cím: " FontSize="14" Margin="5" HorizontalAlignment="Right" VerticalAlignment="Center"/>
            <Label Grid.Column="0" Grid.Row="2" Content="Szerző: " FontSize="14" Margin="5" HorizontalAlignment="Right" VerticalAlignment="Center"/>
            <Label Grid.Column="0" Grid.Row="3" Content="Műfaj: " FontSize="14" Margin="5" HorizontalAlignment="Right" VerticalAlignment="Center"/>
            <Label Grid.Column="0" Grid.Row="4" Content="Státusz: " FontSize="14" Margin="5" HorizontalAlignment="Right" VerticalAlignment="Center"/>
            <Label Grid.Column="0" Grid.Row="5" Content="Leírás: " FontSize="14" Margin="5" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</Window>
